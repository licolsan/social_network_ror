<div align="center">
  <div class="login_form">
    <label><h1>Log In Page</h1></label>
    <br/>
    Log in to Open List or
    <%= link_to 'create an acount', new_registration_path(resource_name), class: "create_account" %>
    <br/><br/>
    <small>Sign in using social media</small>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= image_tag("/icon/twitter.png", alt: "twitter_icon", class: "production_logo") %>
      <%= link_to user_facebook_omniauth_authorize_path, class: "loginBtn loginBtn--facebook" do %>
        <%= image_tag("/icon/facebook.png", alt: "facebook_icon", class: "production_logo") %>
      <% end %>
      <%= link_to user_google_oauth2_omniauth_authorize_path, class: "loginBtn loginBtn--google" do %>
        <%= image_tag("/icon/google.png", alt: "google_icon", class: "production_logo") %>
      <% end %>
      <br><br>
      <small>or Sign in using email address</small>
      <br/><br/>
      <div class="input-group input_field">
        <%= f.email_field :email, :required => true, class: "form-control", placeholder: "Email" %><br/><br/>
        <%= f.password_field :password, :required => true, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="row row_checkbox">
        <div class="checkbox">
          <input type="checkbox" name="remember" value="true">
          Remember me
        </div>
        <div class="forgot_password">
          <a href="">Forgot password?</a>
        </div>
      </div>
      <br/>
      <%= f.submit "Log in", class: "button_login btn" %>
    <% end %>
  </div>
</div>